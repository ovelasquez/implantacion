{% extends '::base.html.twig' %}
{% block _body %}  <h2>Insumos</h2> {% endblock %}
{% block body %}

    <h2>Ver</h2>
    <br>

    <table class="table">
        <tbody>
            <tr hidden="">
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Tipo de Insumo</th>
                <td>{{ entity.tipoInsumo | title }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre | title }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ entity.stock }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ entity.disponible }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('insumos') }}">
                Regresar a la lista
            </a>
        </li>
        {% if is_granted('ROLE_ADMIN') %}
            <li>
                <a href="{{ path('insumos_edit', { 'id': entity.id }) }}">
                    Editar
                </a>
            </li>
        {% endif %}
       <!--<li>{{ form(delete_form) }}</li>-->
    </ul>
{% endblock %}
