{% extends '::base.html.twig' %}

{% block _body %} <h2>Medicamentos</h2> {% endblock %}
{% block body %}

    <h2>Editar</h2>
    <br>

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    <div class="form-group">       
        {{ form_label(edit_form.principioActivo) }}
        {{ form_errors(edit_form.principioActivo) }}
        <div class="col-lg-4">
            {{ form_widget(edit_form.principioActivo) }}
        </div>
    </div>

    <div class="form-group">       
        {{ form_label(edit_form.stock) }}
        {{ form_errors(edit_form.stock) }}
        <div class="col-lg-4">
            {{ form_widget(edit_form.stock) }}
        </div>
    </div>


    <div class="form-group">       
        {{ form_label(edit_form.disponible) }}
        {{ form_errors(edit_form.disponible) }}
        <div class="col-lg-4">
            {{ form_widget(edit_form.disponible) }}
        </div>
    </div>


    <div class="form-group">        
        {{ form_label(edit_form.tipoMedicamento) }}
        {{ form_errors(edit_form.tipoMedicamento) }}
        <div class="col-lg-4">
            {{ form_widget(edit_form.tipoMedicamento) }}
        </div>
    </div>  

    {% if is_granted('ROLE_ADMIN') %}
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-4">
                <button type="submit" class="btn btn-primary">Actualizar</button>
            </div>
        </div>
    {% endif %}
    {{ form_end(edit_form) }}

    <ul class="table">
        <li>
            <a href="{{ path('medicamentos') }}">
                Regresar a la lista
            </a>
        </li>
        <!--<li>{{ form(delete_form) }}</li>-->
    </ul>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script>

        function displayVals() {
            var solonumero = $("#cdi_enfermeriabundle_medicamentos_stock").val();
            var solonumero2 = $("#cdi_enfermeriabundle_medicamentos_disponible").val();

        }

        $("select").change(displayVals);



        $(document).ready(function () {
            $('#cdi_enfermeriabundle_medicamentos_stock').keypress(function (tecla) {
                if (tecla.charCode < 48 || tecla.charCode > 57)
                    return false;
            });
            $('#cdi_enfermeriabundle_medicamentos_disponible').keypress(function (tecla) {
                if (tecla.charCode < 48 || tecla.charCode > 57)
                    return false;
            });

            $('#cdi_enfermeriabundle_medicamentos_stock').bind("cut copy paste", function (e) {

                e.preventDefault();

            });
            $('#cdi_enfermeriabundle_medicamentos_disponible').bind("cut copy paste", function (e) {

                e.preventDefault();

            });

        });

    </script>

{% endblock %}
