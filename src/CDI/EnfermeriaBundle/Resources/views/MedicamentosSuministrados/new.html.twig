{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    <!-- Bootstrap datepicker core CSS -->
    <link rel="stylesheet" href="{{ asset('bundles/enfermeria/css/datepicker.css')}}"
    {% endblock %}

    {% block _body %}  <h2>Medicamentos Suministrados</h2> {% endblock %}
{% block body %}

    <h2>Registro</h2>
    <br>

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="form-group">       
        {{ form_label(form.medicamento) }}
        {{ form_errors(form.medicamento) }}
        <div class="col-lg-4">
            {{ form_widget(form.medicamento) }}
        </div>
    </div>


    <div class="form-group">       
        {{ form_label(form.cantidad) }}
        {{ form_errors(form.cantidad) }}
        <div class="col-lg-4">
            {{ form_widget(form.cantidad) }}
        </div>
    </div>


    <div class="form-group">       
        {{ form_label(form.viaAdministracion) }}
        {{ form_errors(form.viaAdministracion) }}
        <div class="col-lg-4">
            {{ form_widget(form.viaAdministracion) }}
        </div>
    </div>

    <div class="form-group">       
        {{ form_label(form.consulta) }}
        {{ form_errors(form.consulta) }}
        <div class="col-lg-4">
            {{ form_widget(form.consulta) }}
        </div>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-4">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>
        </div>
    {% endif %}

    {{ form_end(form) }} 


    <ul class="table">
        <li>
            <a href="{{ path('medicamentossuministrados') }}">
                Regresar a la lista
            </a>
        </li>
    </ul>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script>

        function displayVals() {
            var solonumero = $("#cdi_enfermeriabundle_medicamentossuministrados_cantidad").val();
        }

        $("select").change(displayVals);



        $(document).ready(function () {
            $('#cdi_enfermeriabundle_medicamentossuministrados_cantidad').keypress(function (tecla) {
                if (tecla.charCode < 48 || tecla.charCode > 57)
                    return false;
            });

            $('#cdi_enfermeriabundle_medicamentossuministrados_cantidad').bind("cut copy paste", function (e) {

                e.preventDefault();

            });

        });

    </script>

{% endblock %}
