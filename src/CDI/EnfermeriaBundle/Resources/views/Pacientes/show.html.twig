{% extends '::base.html.twig' %}
{% block _body %}  <h2>Pacientes</h2> {% endblock %}
{% block body %}

    <h2>Ver</h2>
    <br>

    <table class="table">
        <tbody>
            <tr hidden="">
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>

            <tr>
                <th>Apellidos</th>
                <td>{{ entity.datos.apellidos | title }}</td>
            </tr>

            <tr>
                <th>Nombres</th>
                <td>{{ entity.datos.nombres | title }}</td>
            </tr>

            <tr>
                <th>Cédula</th>
                <td>{{ entity.datos.cedula }}</td>
            </tr>

            <tr>
                <th>Género</th>
                <td>{{ entity.genero |title }}</td>
            </tr>

            <tr>
                <th>Fecha Nacimiento</th>
                <td>{{ entity.fechaNacimiento|date('d-m-Y') }}</td>
            </tr>

            <tr>
                <th>Procedencia</th>
                <td>{{ entity.procedencia |title }}</td>
            </tr>

            {% if entity.tipo %}
                <tr>
                    <th>Tipo de Paciente</th>
                    <td>{{ entity.tipo | title }}</td>
                </tr>
            {% endif %}

            {% if entity.pfg %}
                <tr>
                    <th>PFG</th>
                    <td>{{ entity.pfg}}</td>
                </tr>
            {% endif %}


            <tr>
                <th>Fecha Registro</th>
                <td>{{ entity.fechaRegistro|date('d-m-Y H:i:s') }}</td>
            </tr>

        </tbody>
    </table>

    <ul class="table">
        <li>
            <a href="{{ path('pacientes') }}">Regresar a la lista</a>
        </li>
        {% if is_granted('ROLE_ADMIN') %}
            <li>
                <a href="{{ path('pacientes_edit', { 'id': entity.id }) }}">Editar</a>
            </li>
        {% endif %}
         <!--<li>{{ form(delete_form) }}</li>-->
    </ul>
{% endblock %}
