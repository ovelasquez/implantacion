{% extends '::base.html.twig' %}
{% if is_granted('ROLE_ENFERMERA') %}
    {% block _body %} 
        <h2><b>UBV</b> - Centro de Diagnóstico Integral</h2> 
    {% endblock %}
    {% block body %}
        <div class="col-lg-6 col-lg-offset-3">
            <div class="panel panel-danger">
                <div class="panel-heading">Datos del Paciente </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">                                                                    
                            <p>El número de cédula <b>{{cedula | number_format(0,',','.')}}</b> no se encuentra registrado. ¿Desea registrarlo?</p>
                            <div class="col-md-4 col-md-offset-5">
                                <a class="btn btn-primary col-md-4 col-md-offset-1" href="{{ path('pacientes_crear' , {'cedula': cedula }) }}">SI</a>
                                <a class="btn btn-danger col-md-4 col-md-offset-1" href="{{ path('verificar') }}">NO</a>
                            </div>                                
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    {% endblock %}
{% endif %}